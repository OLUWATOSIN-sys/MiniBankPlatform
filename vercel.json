{
  "version": 2,
  "name": "mini-bank-platform",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "projectSettings": {
          "framework": "nextjs",
          "buildCommand": "npm run build",
          "outputDirectory": ".next"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://minibank-backend.onrender.com"
  },
  "functions": {
    "frontend/pages/**/*.js": {
      "maxDuration": 30
    }
  }
}
